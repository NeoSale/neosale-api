{
  "name": "neosale-api",
  "version": "1.23.4",
  "private": true,
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/kill-port-3000.ps1 && set PORT=3000 && nodemon src/server.ts",
    "dev:docker": "node scripts/start-docker.js && npm run dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:docker": "node scripts/start-docker.js && npm start",
    "lint": "eslint src/**/*.ts",
    "migrate": "ts-node scripts/run-migrations.ts",
    "migrate:docker": "npm run docker:start && npm run migrate",
    "migrate:all": "node migration-config.js",
    "migrate:neosale": "node migration-config.js neosale",
    "migrate:omie": "node migration-config.js omie",
    "docker:check": "node scripts/check-docker.js",
    "docker:start": "powershell -ExecutionPolicy Bypass -File scripts/start-docker.ps1",
    "docker:auto": "node scripts/start-docker.js",
    "supabase:test": "node test-supabase-functions.js",
    "supabase:setup": "echo 'Execute o arquivo setup_supabase_functions.sql no Supabase SQL Editor'",
    "deploy": "bash build-and-push.sh",
    "deploy:patch": "echo '1' | bash build-and-push.sh",
    "deploy:minor": "echo '2' | bash build-and-push.sh",
    "deploy:major": "echo '3' | bash build-and-push.sh",
    "deploy:auto": "echo '5' | bash build-and-push.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "openai": "^6.6.0",
    "pdfjs-dist": "^3.11.174",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5",
    "@types/node-cron": "^3.0.11"
  }
}
